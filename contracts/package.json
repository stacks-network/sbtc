{
  "name": "contracts-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "clarigen && clarigen docs",
    "build:docs": "clarigen docs",
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "generate-coverage": "pnpm test:report && genhtml -o coverage/html lcov.info",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clarigen/cli": "2.1.2",
    "@clarigen/core": "2.1.2",
    "@clarigen/test": "2.1.2",
    "@hirosystems/clarinet-sdk": "2.15.2",
    "@noble/secp256k1": "^2.2.3",
    "@scure/base": "^1.2.4",
    "@scure/btc-signer": "^1.7.0",
    "@stacks/stacking": "^6.17.0",
    "@stacks/transactions": "^6.17.0",
    "c32check": "^2.0.0",
    "chokidar-cli": "^3.0.0",
    "vite": "^6.2.2",
    "vitest": "^3.0.9",
    "vitest-environment-clarinet": "2.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  }
}
